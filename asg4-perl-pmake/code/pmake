  #print "make_all_fn starting!\n" if $OPTIONS{'d'};
   # check if the target is a macro using regex (hint: use  s//)



   for my $target (sort keys %GRAPH) {
      #print "$target\n" if $OPTIONS{'d'};#print target
      make_fn($target);


